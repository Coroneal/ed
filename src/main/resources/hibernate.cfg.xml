<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <property name="connection.url">jdbc:postgresql://127.0.0.1:5432/crawler</property>
        <property name="connection.username">postgres</property>
        <property name="connection.password">superuser1</property>
        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>

        <property name="show_sql">false</property>

        <property name="format_sql">true</property>
        <property name="hbm2ddl.auto">validate</property>

        <!-- JDBC connection pool (use the built-in) -->
        <property name="connection.pool_size">1</property>
        <property name="current_session_context_class">thread</property>

        <mapping class="pl.edu.agh.crawler.db.model.BlogUser" />
        <mapping class="pl.edu.agh.crawler.db.model.Record" />
        <mapping class="pl.edu.agh.crawler.db.model.Text" />
        <mapping class="pl.edu.agh.crawler.db.model.Tag" />
        <mapping class="pl.edu.agh.crawler.db.model.SocialMediaUser" />
        <mapping class="pl.edu.agh.crawler.db.model.SocialMediaType" />
        <mapping class="pl.edu.agh.crawler.db.model.Comment" />




        <!-- <mapping resource="com/mkyong/user/DBUser.hbm.xml"></mapping> -->
    </session-factory>
</hibernate-configuration>